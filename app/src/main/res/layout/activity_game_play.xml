<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".GamePlay">

  <edu.cnm.deepdive.lordofthesticks.JoystickView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/joystickLeft"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <edu.cnm.deepdive.lordofthesticks.JoystickView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/joystickRight"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <ImageView
    android:id="@+id/stick_figure"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:src="@drawable/stickman"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>

  <ImageView
    android:id="@+id/bow_arrow"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:src="@drawable/bow_and_arrow1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/stick_figure"/>

  <ImageView
    android:id="@+id/axe"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_axe1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/bow_arrow"/>

  <ImageView
    android:id="@+id/sword"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:src="@drawable/sword1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/axe"/>


</androidx.constraintlayout.widget.ConstraintLayout>